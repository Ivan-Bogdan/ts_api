{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "strict": true,      
      "esModuleInterop": false,
      "sourceRoot": "./src",
      "inlineSourceMap": true,
      "baseUrl": ".",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "paths": {
          "*":[
              "node_modules/",
              "src/types/*"
          ]
      }
    },
    "include": [
        "src/**/*"
    ]
  }